<% provide(:title, 'Edit course') %>
<h1>Edit course</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([:admin, @course]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :start_date %>
      <%= f.text_field :start_date %>

      <%= f.label :end_date %>
      <%= f.text_field :end_date %>

      <%= f.label :instruction %>
      <%= f.text_area :instruction, placeholder: "Compose instruction..." %>

      <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name %>
      <%= f.submit "Update", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  jQuery('#course_start_date').datetimepicker();
  jQuery('#course_end_date').datetimepicker();
</script>
